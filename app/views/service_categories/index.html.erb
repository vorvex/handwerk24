<%= render 'shared/header' %>
<ol class="breadcrumb" style="margin-top: -20px; background-color: white;">
  <li class="active">Kategorien</a></li>
</ol>
<div class="container-fluid">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Kategorien</h3>
    </div>
      <table class="table table-hover">
        <thead>
          <th>ID</th>
          <th>Kategorie</th>
          <th>Change</th>
        </thead>
        <tbody>
          <% @categories.each do |f| %>
            <tr onclick="window.location='/service_categories/<%= f.id %>';">
              <td class="col-md-1"><%= f.id %></td>
              <td class="col-md-4"><%= f.name %></td>
              <td class="col-md-1">
                <%= link_to 'Bearbeiten', edit_service_category_path(f) %> 
                <%= link_to 'LÃ¶schen', service_category_path(f), method: :delete, data: {confirm: "Sicher?"} %>
              </td> 
            </tr>
          <% end %>
        </tbody> 
      </table>
  </div>
  <div class="panel panel-default">
    <div class="panel-heading"><h3 class="panel-title">Neuen Bereich erstellen</h3></div>
    <div class="panel-body">
      <%= form_for(@new_category, :html => {class: "form", role: "form"}, url: service_categories_url) do |f| %>
        <div class="form-group">
          <div class="control-label">
            <%= f.label :name %>           
          </div>
          <%= f.text_field :name, class: "form-control", placeholder: "Leistung", autofocus: true %>
        </div>
        <div class="form-group">
           <%= f.submit class: 'btn btn-primary' %>
        </div>
      <% end %> 
    </div>
  </div>
</div>