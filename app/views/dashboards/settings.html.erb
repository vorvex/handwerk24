<%= render 'sidemenu' %>
<main class="o-page__content">
  <%= render 'header' %>
<%= form_for(@user, url: update_user_url, method: :post) do |f| %>
  <div class="container-fluid">
    <div class="row">
        <div class="col-md-3">
          <div class="c-card u-mb-medium">
              <div class="c-card__header c-card__header--transparent o-line">
                  <h5 class="c-card__title">Gartenarbeiten</h5>
              </div>
              <div class="c-card" style="padding: 10px;">
                <div style="height: 150px; overflow-y: scroll; overflow-x: hidden;">
                 <%= f.collection_check_boxes :service_ids, @garten, :id, :name do |cb| %>
                   <% cb.label(class: "check_container3") {cb.check_box(id: "click" ) + cb.text + "<span class='checkmark3'></span>".html_safe} %>
                 <% end %> 
                </div>
              </div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="c-card u-mb-medium">
              <div class="c-card__header c-card__header--transparent o-line">
                  <h5 class="c-card__title">Außen am Haus</h5>
              </div>
              <div class="c-card" style="padding: 10px;">
                <div style="height: 150px; overflow-y: scroll; overflow-x: hidden;">
                 <%= f.collection_check_boxes :service_ids, @aussen, :id, :name do |cb| %>
                   <% cb.label(class: "check_container3") {cb.check_box(id: "click" ) + cb.text + "<span class='checkmark3'></span>".html_safe} %>
                 <% end %> 
                </div>
              </div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="c-card u-mb-medium">
              <div class="c-card__header c-card__header--transparent o-line">
                  <h5 class="c-card__title">Haus und Wohnung</h5>
              </div>
              <div class="c-card" style="padding: 10px;">
                <div style="height: 150px; overflow-y: scroll; overflow-x: hidden;">
                 <%= f.collection_check_boxes :service_ids, @haus, :id, :name do |cb| %>
                   <% cb.label(class: "check_container3") {cb.check_box(id: "click" ) + cb.text + "<span class='checkmark3'></span>".html_safe} %>
                 <% end %> 
                </div>
              </div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="c-card u-mb-medium">
              <div class="c-card__header c-card__header--transparent o-line">
                  <h5 class="c-card__title">Bodenbeläge</h5>
              </div>
              <div class="c-card" style="padding: 10px;">
                <div style="height: 150px; overflow-y: scroll; overflow-x: hidden;">
                 <%= f.collection_check_boxes :service_ids, @boden, :id, :name do |cb| %>
                   <% cb.label(class: "check_container3") {cb.check_box(id: "click" ) + cb.text + "<span class='checkmark3'></span>".html_safe} %>
                 <% end %> 
                </div>
              </div>
          </div>
        </div>
      </div>  
    <div class="row">
        <div class="col-md-12">
            <div class="c-card c-card--responsive u-mb-medium">
                <div class="c-card__header c-card__header--transparent o-line" style="margin-bottom: 15px">
                    <h5 class="c-card__title">Konto Einstellungen</h5>
                </div>
                <div class="col-md-6">
                  <div class="c-field u-mb-small">
                      <label class="c-field__label" for="firstName">Betriebsname</label>
                      <%= f.text_field :name, class: "c-input", placeholder: "Betriebsname" %> 
                  </div>
                  <div class="c-field u-mb-small">
                      <label class="c-field__label" for="firstName">Inhaber/Geschäftsführer</label>
                      <%= f.text_field :inhaber, class: "c-input", placeholder: "Inhaber" %> 
                  </div>
                  <div class="c-field u-mb-small">
                      <label class="c-field__label" for="firstName">Email-Adresse</label>
                      <%= f.text_field :email, class: "c-input", placeholder: "info@musterbetrieb.de" %> 
                  </div>
                  <div class="c-field u-mb-small">
                      <label class="c-field__label" for="firstName">Inhaber/Geschäftsführer</label>
                      <%= f.select :field_id, options_for_select(Field.all.map{|i| [i.name, i.id]}, selected: f.object.field_id), { }, { class: "form-control" } %> 
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="c-field u-mb-small">
                      <label class="c-field__label" for="firstName">Straße & Hausnummer</label>
                      <%= f.text_field :adresse, class: "c-input", placeholder: "Hauptstraße 1" %> 
                  </div>
                  <div class="c-field u-mb-small">
                      <label class="c-field__label" for="firstName">Postleitzahl</label>
                      <%= f.text_field :plz, class: "c-input", placeholder: "76275" %> 
                  </div>
                  <div class="c-field u-mb-small">
                      <label class="c-field__label" for="firstName">Telefon</label>
                      <%= f.text_field :telefon, class: "c-input", placeholder: "012345678910" %> 
                  </div>
                  <div class="c-field u-mb-small">
                      <label class="c-field__label" for="firstName">Webseite</label>
                      <%= f.text_field :url, class: "c-input", placeholder: "www.beispiel.de" %> 
                  </div>
                </div>
                <div class="col-md-12">
                  <div class="c-field u-mb-small">
                    <%= f.submit class: 'c-btn c-btn--info' %>
                    <%= link_to user_path, method: :destroy, class: 'c-btn c-btn--secondary pull-right' do %>
                      <i class="fa fa-trash-o u-mr-xsmall"></i>Akkount löschen
                    <% end %>
                </div>
              </div>
            </div>
        </div>
      </div>
       </div>
  <% end %>
</main>