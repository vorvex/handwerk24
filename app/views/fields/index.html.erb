<%= render 'shared/header' %>
<%= render 'shared/messages' %>
<%= render 'shared/errors', obj: @field %>
<div class="container-fluid">
  <div class="panel panel-default">
    <div class="panel-heading"><h3 class="panel-title">Liste der Branchen</h3></div>
      <table class="table table-hover">
        <thead>
          <th>ID</th>
          <th>Branche</th>
          <th>Bearbeiten</th>
        </thead>
         <% @fields.each do |f| %>
           <tbody>
            <td class="col-md-1"><%= f.id %></td>
            <td class="col-md-9"><%= f.name %></td>
            <td class="col-md-2"><%= link_to 'Bearbeiten', edit_field_path(f) %> 
                <%= link_to 'LÃ¶schen', field_path(f), method: :delete, data: {confirm: "Sicher?"} %></td> 
          </tbody>
        <% end %>
      </table>
  </div>
  <div class="panel panel-default">
    <div class="panel-heading"><h3 class="panel-title">Neue Branche erstellen</h3></div>
    <div class="panel-body">
      <%= form_for(@field, :html => {class: "form", role: "form"}, url: fields_url) do |f| %>
       <div class="form-group">
         <div class="control-label">
          <%= f.label :name %>           
         </div>
          <%= f.text_field :name, class: "form-control", placeholder: "Branche", autofocus: true %>
       </div>  
       <div class="form-group">
           <%= f.submit class: 'btn btn-primary' %>
      </div>
      <% end %> 
    </div>
  </div>
</div>