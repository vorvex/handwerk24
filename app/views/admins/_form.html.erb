<%= form_for(@admin, :html => {class: "form-inline", role: "form"}, url: admin_url) do |f| %>
  <div class="form-group">
    <%= f.email_field :email, class: "form-control", placeholder: "Email", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.password_field :password, class: "form-control", placeholder: "Passwort" %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>