<%= render 'shared/header' %>
<div class="container">
  <%= render 'shared/messages' %>
    <h1>Login</h1>
    <%= form_for(:session, :html => {class: "form", role: "form"}, url: login_path) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, class: "form-control", placeholder: "Email", autofocus: true %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, class: "form-control", placeholder: "Passwort" %>
      </div>
      <div class="form-group">
        <%= f.submit "Log In", class: "btn btn-primary" %>
      </div>
    <% end %>  
</div>