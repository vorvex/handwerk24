<%= render 'shared/header' %>
<%= render 'shared/messages' %>
<% if Admin.any? %>
  <h1>Login</h1>
  <%= form_for(:session, :html => {class: "form", role: "form"}, url: admin_login_path) do |f| %>
    <div class="form-group">
      <%= f.email_field :email, class: "form-control", placeholder: "Email", autofocus: true %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, class: "form-control", placeholder: "Passwort" %>
    </div>
    <div class="form-group">
      <%= f.submit "Log In", class: "btn btn-primary" %>
    </div>
  <% end %>  
<% else %>
  <h1>Sign Up</h1>
  <%= form_for(@admin, :html => {class: "form", role: "form"}, url: admin_url) do |f| %>
    <div class="form-group">
      <%= f.email_field :email, class: "form-control", placeholder: "Email", autofocus: true %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, class: "form-control", placeholder: "Passwort" %>
    </div>
    <div class="form-group">
      <%= f.submit class: 'btn btn-primary' %>
    </div>
  <% end %>
<% end %>